<h1 class="text-center">Update Event Attachment Relation</h1>
<%= simple_form_for(@event_attachment_relation) do |f| %>
  <%= f.error_notification %>
  <%= f.association :event %>
  <%= f.association :attachment %>
  <%= f.input :active, placeholder:"Active", label: "Active" %>
  <%= f.button :submit, "Update Event Attachment Relation", class: "btn btn-primary" %>
  <%= link_to "Cancel", :back, class: "btn btn-warning" %>
  <%= link_to "Event Attachment Relations", event_attachment_relations_path, class: "btn btn-primary"  %>
<% end %>
