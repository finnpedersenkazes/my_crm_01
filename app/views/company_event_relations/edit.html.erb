<h1 class="text-center">Update Company Event Relation</h1>
<%= simple_form_for(@company_event_relation) do |f| %>
  <%= f.error_notification %>
  <%= f.association :company %>
  <%= f.association :event %>
  <%= f.input :active, placeholder:"Active", label: "Active" %>
  <%= f.button :submit, "Update Company Event Relation", class: "btn btn-primary" %>
  <%= link_to "Cancel", :back, class: "btn btn-warning" %>
  <%= link_to "Company Event Relations", company_event_relations_path, class: "btn btn-primary"  %>
<% end %>
