<h1 class="text-center">New Company</h1>
<%= simple_form_for(@company) do |f| %>
  <%= f.error_notification %>
  <%= f.input :name, placeholder:"Name", label: false %>
  <%= f.input :description, placeholder:"Description", label: false %>
  <%= f.input :active, placeholder:"Active", label: false %>
  <%= f.button :submit, "Add Company", class: "btn btn-primary" %>
  <%= link_to "Companies", companies_path, class: "btn btn-primary"  %>
<% end %>
